{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "api/*": ["api/*"],
      "config/*": ["config/*"],
      "db/*": ["db/*"],
      "models/*": ["models/*"],
      "typings/*": ["typings/*"],
      "utils/*": ["utils/*"],
      "session/*": ["session/*"]
    }
  }
}
